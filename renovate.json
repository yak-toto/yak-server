{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "minimumReleaseAge": "5 days",
    "pre-commit": {
        "enabled": true
    },
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "automergeType": "pr"
    },
    "packageRules": [
        {
            "matchManagers": [
                "dockerfile"
            ],
            "automerge": true,
            "automergeType": "pr"
        },
        {
            "matchManagers": [
                "docker-compose"
            ],
            "automerge": true,
            "automergeType": "pr"
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "automerge": true,
            "automergeType": "pr"
        },
        {
            "matchManagers": [
                "pre-commit"
            ],
            "automerge": true,
            "automergeType": "pr"
        }
    ]
}
